ORIG_PN="glib-networking"
inherit gnome2


DEPEND="gnome-common
	pkgconfig(gio-2.0)
	pkgconfig(gnutls)
	pkgconfig(gsettings-desktop-schemas)
	pkgconfig(libproxy-1.0)"

# pkcs11: requires gnutls with p11-kit support
CYGCONF_ARGS="--libexecdir=/usr/bin --without-pkcs11 --with-ca-certificates=/usr/ssl/certs/ca-bundle.crt"

KEEP_LA_FILES="none"
